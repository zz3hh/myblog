<% include header %>
	<div class="box section about">
		<div id="section-left" class="fl article-box">
			<div class="post-list">
				<h2 class="title">
					<a class="category" href="/category/article/<%- article.category%>" title="查看更多<%- article.category%>分类文章"><%- article.category%><i></i></a>
					<a href="/article/<%= article.id %>"><%- article.title %></a>
				</h2>
				<div class="info">
					<span class="icomoon post-date"><%- new Date(article.time).toLocaleString() %></span>
					<span class="icomoon read-time"><%- article.readtime %>人浏览</span>
					<span class="icomoon post-author">作者：<%- article.author %></span>
				</div>
			</div>
			<div class="text">
				<%- article.content %>
			</div>
			<div class="ds-share" data-thread-key="aticle<%= article.id %>" data-title="<%= article.title %>" data-images="http://www.baiyatao.com/images/user-img.png" data-content="<%= article.headintro %>" data-url="http://www.baiyatao.com/article/<%= article.id %>">
			    <div class="ds-share-inline">
			      <ul  class="ds-share-icons-16">
			      	<li data-toggle="ds-share-icons-more"><a class="ds-more" href="javascript:void(0);">分享到：</a></li>
			        <li><a class="ds-weibo" href="javascript:void(0);" data-service="weibo">微博</a></li>
			        <li><a class="ds-qzone" href="javascript:void(0);" data-service="qzone">QQ空间</a></li>
			        <li><a class="ds-qqt" href="javascript:void(0);" data-service="qqt">腾讯微博</a></li>
			        <li><a class="ds-wechat" href="javascript:void(0);" data-service="wechat">微信</a></li>
			      </ul>
			      <div class="ds-share-icons-more">
			      </div>
			    </div>
			 </div>
			<div class="ds-share" data-thread-key="aticle<%= article.id %>" data-title="<%= article.title %>" data-images="http://www.baiyatao.com/images/user-img.png" data-content="<%= article.headintro %>" data-url="http://www.baiyatao.com/article/<%= article.id %>">
			    <div class="ds-share-aside-right">
			      <div class="ds-share-aside-inner">
			      </div>
			      <div class="ds-share-aside-toggle">分享到</div>
			    </div>
			</div>
		</div>
		<div id="section-right" class="fr clearfix">
			<div class="small-box">
				<h3>博文分类</h3>
				<div id="article-typelist" data-type = "1" class="clearfix">
					<% if(categorylist && categorylist.length > 0){ categorylist.forEach(function(category, index){ %>
                		<a target="_blank" href="/category/article/<%-category.category%>" title="查看分类：<%-category.category%>"><%-category.category%><span>(<%-category.counts%>)</span></a>
                	<% })} %>
				</div>
			</div>
			<div class="small-box">
				<h3>文章评论</h3>
				<div class="ds-thread" data-thread-key="aticle<%= article.id %>" data-title="<%= article.title %>" data-url="/article/<%= article.id %>"></div>
			</div>
			<% include author %>
			<div id="duoshuo-visit" class="small-box">
				<h3>网站最近访客：</h3>
				<ul class="ds-recent-visitors" data-num-items="10"></ul>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
<% include footer %>
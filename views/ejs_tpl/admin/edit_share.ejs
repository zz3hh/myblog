<% include header %>
	<div class="box section about">
		<div id="article-header">
			<h3>文章标题</h3>
			<input id="js_share-id" type="hidden" value="<%=article.id%>"/>
			<input id="js_share-title" class="article-name" type="text" value="<%= article.title %>"/>
		</div>
		<div id="article-header">
			<h3>作者</h3>
			<input id="js_share-author" class="article-name" type="text" value="<%= article.author %>"/>
		</div>
		<div id="article-header">
			<h3>原文路径</h3>
			<input id="js_share-url" class="article-name" type="text" value="<%= article.url %>"/>
		</div>
		<div id="article-header">
			<h3>文章简介</h3>
			<textarea id="js_share-headintro" class="article-input" placeholder="首页展示提示信息"></textarea>
		</div>
		<div id="article-header">
			<h3>文章展示图片</h3>
			<input id="js_share-headimg" class="article-name" type="text" value="<%= article.headimg %>"/>
		</div>
		<div id="article-footer">
			<h3>文章标签</h3>
			<input id="js_share-category" class="article-category" type="text" value="<%= article.category %>"/>
		</div>
		<div id="article-content">
			<h3>文章内容</h3>
			<script id="editor" type="text/plain" style="width:100%;height:500px;margin: 0 auto;"></script>
		</div>
		<div id="article-footer">
			<div class="atlhand-btns">
				<a id="js_update-share" href="javascript:;">修改分享</a>
			</div>
		</div>

		<script type="text/javascript" charset="utf-8" src="/javascripts/ueditor/ueditor.config.js"></script>
    	<script type="text/javascript" charset="utf-8" src="/javascripts/ueditor/ueditor.all.min.js"> </script>
    	<script type="text/javascript" charset="utf-8" src="/javascripts/ueditor/lang/zh-cn/zh-cn.js"></script>
		<script type="text/javascript">
		    var ue = UE.getEditor('editor');
		</script>
	</div>
<% include footer %>